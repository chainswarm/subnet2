# =============================================================================
# Subnet Configuration
# =============================================================================
# Copy this file to .env and configure for your deployment

# =============================================================================
# POSTGRESQL DATABASE
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=validator
POSTGRES_USER=validator
POSTGRES_PASSWORD=password1234

# =============================================================================
# REDIS (Celery Broker)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
WORKER_CONCURRENCY=2
LOG_LEVEL=INFO

# =============================================================================
# EVALUATION SETTINGS
# =============================================================================
REPOS_PATH=/tmp/evaluation/repos
DATA_PATH=/tmp/evaluation/data

EVALUATION_BUILD_TIMEOUT_SECONDS=600
EVALUATION_RUN_TIMEOUT_SECONDS=300
EVALUATION_MEMORY_LIMIT_MB=4096
EVALUATION_CPU_LIMIT=2

# =============================================================================
# BITTENSOR CONFIGURATION
# =============================================================================
WALLET_NAME=default
WALLET_HOTKEY=default
SUBTENSOR_NETWORK=test
NETUID=305

SUBMISSION_TIMEOUT_SECONDS=30

# =============================================================================
# TOURNAMENT CONFIGURATION
# =============================================================================
# Timing Configuration for Evaluation Tournaments
# Development: 10-minute tournaments (2min submission + 3×3min epochs)
# Production: 6-day tournaments (1 day submission + 5×24h epochs)

# Submission phase duration (seconds)
TOURNAMENT_SUBMISSION_DURATION_SECONDS=120

# Number of evaluation epochs (days)
TOURNAMENT_EPOCH_COUNT=3

# Duration of each epoch (seconds)
TOURNAMENT_EPOCH_DURATION_SECONDS=180

# Comma-separated list of test networks
TOURNAMENT_NETWORKS=torus

# Schedule Mode: "manual" or "daily"
# - manual: Start tournaments via API (development)
# - daily: Auto-start at 00:00 UTC via Celery Beat (production)
TOURNAMENT_SCHEDULE_MODE=manual

# Production Example (6-day tournaments):
# TOURNAMENT_SUBMISSION_DURATION_SECONDS=86400
# TOURNAMENT_EPOCH_COUNT=5
# TOURNAMENT_EPOCH_DURATION_SECONDS=86400
# TOURNAMENT_NETWORKS=torus,bittensor,ethereum
# TOURNAMENT_SCHEDULE_MODE=daily

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
