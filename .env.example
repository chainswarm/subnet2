# =============================================================================
# Subnet Configuration
# =============================================================================
# Copy this file to .env and configure for your deployment

# =============================================================================
# POSTGRESQL DATABASE
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=validator
POSTGRES_USER=validator
POSTGRES_PASSWORD=password1234

# =============================================================================
# REDIS (Celery Broker)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
WORKER_CONCURRENCY=2
LOG_LEVEL=INFO

# =============================================================================
# EVALUATION SETTINGS
# =============================================================================
REPOS_PATH=/tmp/evaluation/repos
DATA_PATH=/tmp/evaluation/data

EVALUATION_BUILD_TIMEOUT_SECONDS=600
EVALUATION_RUN_TIMEOUT_SECONDS=300
EVALUATION_MEMORY_LIMIT_MB=4096
EVALUATION_CPU_LIMIT=2

# =============================================================================
# BITTENSOR CONFIGURATION
# =============================================================================
WALLET_NAME=default
WALLET_HOTKEY=default
SUBTENSOR_NETWORK=finney
NETUID=1

SUBMISSION_TIMEOUT_SECONDS=30

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
